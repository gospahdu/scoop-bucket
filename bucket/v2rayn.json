{
    "version": "5.39",
    "description": "GUI client based on v2ray core",
    "homepage": "https://github.com/2dust/v2rayN",
    "license": "GPL-3.0-only",
    "depends": [
        "v2ray",
        "xray"
    ],
    "suggest": {
        "rules": "v2ray-rules-dat"
    },
    "url": "https://github.com/2dust/v2rayN/releases/download/5.39/v2rayN.zip",
    "hash": "8300c55499b69571d87a6edbd7d8c6d6b311343ad3ed36341218f9cd06fa7264",
    "extract_dir": "v2rayN",
    "pre_install": [
        "foreach ($form in @('*.exe')) {",
        "    foreach ($_ in Get-ChildItem \"$(appdir v2ray $global)\\current\" -File) {",
        "        $name = $_.Name",
        "        if ($name -Like $form) {",
        "            Write-Host \"Creating SymbolicLink for $name\"",
        "            New-Item -ItemType SymbolicLink -Path \"$dir\" -Name $name -Target \"$(appdir v2ray $global)\\current\\$name\" | Out-Null",
        "        }",
        "    }",
        "}",
        "foreach ($form in @('*.exe')) {",
        "    foreach ($_ in Get-ChildItem \"$(appdir xray $global)\\current\" -File) {",
        "        $name = $_.Name",
        "        if ($name -Like $form) {",
        "            Write-Host \"Creating SymbolicLink for $name\"",
        "            New-Item -ItemType SymbolicLink -Path \"$dir\" -Name $name -Target \"$(appdir xray $global)\\current\\$name\" | Out-Null",
        "        }",
        "    }",
        "}",
        "if (Test-Path $(appdir v2ray-rules-dat $global)) {",
        "   Remove-Item -Path \"$dir\" -Include *.dat",
        "   foreach ($form in @('*.dat')) {",
        "       foreach ($_ in Get-ChildItem \"$(appdir v2ray-rules-dat $global)\\current\" -File) {",
        "           $name = $_.Name",
        "           if ($name -Like $form) {",
        "               Write-Host \"Creating SymbolicLink for $name\"",
        "               New-Item -ItemType SymbolicLink -Path \"$dir\" -Name $name -Target \"$(appdir v2ray-rules-dat $global)\\current\\$name\" | Out-Null",
        "           }",
        "       }",
        "   }",
        "}"
    ],
    "bin": "v2rayN.exe",
    "shortcuts": [
        [
            "v2rayN.exe",
            "v2rayN"
        ]
    ],
    "persist": [
        "user-wininet.json",
        "config.json",
        "guiNConfig.json"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/2dust/v2rayN/releases/download/$version/v2rayN.zip"
    }
}
